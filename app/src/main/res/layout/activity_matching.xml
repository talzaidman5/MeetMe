<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/matching_layout"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MatchingActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:id="@+id/matching_AppBar"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/chat_Toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/design_default_color_primary"
            android:theme="@style/Base.CardView"
            app:popupTheme="@style/TextAppearance.AppCompat.Widget.PopupMenu.Small">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/matching_profileImage"
                android:layout_marginLeft="10dp"
                android:layout_width="30dp"
                android:layout_height="30dp">
            </de.hdodenhof.circleimageview.CircleImageView>

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="ההתאמות שלך"
                android:gravity="center"
                android:layout_centerInParent="true"
                android:textColor="#fff"

                android:textSize="30dp"></TextView>

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/matching_LST_news"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/matching_BTN_logout"
        android:layout_below="@id/matching_AppBar"
        android:layout_marginTop="30dp" />

    <Button
        android:id="@+id/matching_BTN_logout"
        android:layout_width="wrap_content"
        android:background="@drawable/login_button_bk2"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="התנתק" />

</RelativeLayout>