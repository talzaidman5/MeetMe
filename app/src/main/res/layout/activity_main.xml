<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/logo"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="60dp"
        android:layout_centerHorizontal="true"
        android:textSize="40dp"
        android:layout_above="@id/activity_main_BTN_login"
        android:textStyle="bold" />
<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:id="@+id/activity_main_BTN_login"
    android:background="@drawable/login_button_bk2"
    android:layout_marginTop="15dp"
    android:text="Login">
</Button>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:id="@+id/activity_main_BTN_signUp"
        android:layout_below="@id/activity_main_BTN_login"
        android:background="@drawable/login_button_bk2"
        android:layout_marginTop="15dp"
        android:text="Sign Up"></Button>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:id="@+id/activity_main_BTN_about"
        android:layout_below="@id/activity_main_BTN_signUp"
        android:layout_marginTop="15dp"
        android:background="@drawable/login_button_bk2"
        android:text="About"></Button>


</RelativeLayout>