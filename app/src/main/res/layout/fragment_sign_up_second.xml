<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="#FFFFFF"
    tools:context=".Fragment.Fragment_signUp_second">

    <TextView
        style="@style/headerTextPrimary"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:id="@+id/title"
        android:textColor="#000000"
        android:text="העדפות אישיות"></TextView>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputInterestingIn"
        android:layout_below="@+id/title"
        style="@style/parent"
        android:gravity="right">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/editTextInterestingIn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:hint="מעוניין ב:"
                android:inputType="text"
                android:maxLines="1"
                android:textColor="#000000" />

            <CheckBox
                android:id="@+id/InterestingInFemale"
                style="@style/modifiedEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="אישה" />

            <CheckBox
                android:id="@+id/InterestingInMen"
                style="@style/modifiedEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:text="גבר" />


        </LinearLayout>
    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="right"
        android:id="@+id/hobbies"
        android:layout_below="@+id/textInputInterestingIn"
        android:orientation="horizontal">

        <TextView
            style="@style/modifiedEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="תחביבים: "></TextView>

        <ImageButton
            android:id="@+id/signUp_BTN_artist"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/artist" />

        <ImageButton
            android:id="@+id/signUp_BTN_yoga"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/yoga" />

        <ImageButton
            android:id="@+id/signUp_BTN_bicycle"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/bicycle" />

        <ImageButton
            android:id="@+id/signUp_BTN_joystick"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/joystick" />

        <ImageButton
            android:id="@+id/signUp_BTN_bake"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/bake" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginRight="50dp"
        android:gravity="right"
        android:layout_below="@+id/hobbies"
        android:id="@+id/hobbies2"
        android:orientation="horizontal">
        <ImageButton
            android:id="@+id/signUp_BTN_camera"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/camera" />
        <ImageButton
            android:id="@+id/signUp_BTN_guitar"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/guitar" />
    </LinearLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputMinMaxAge"
        style="@style/parent"
        android:layout_below="@+id/hobbies2"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/editTextMinAge"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:hint="טווח גילאים:"
                android:inputType="textEmailAddress"
                android:maxLines="1" />

            <Spinner
                android:id="@+id/signUp_LSV_minAge"
                android:layout_width="120dp"
                android:layout_height="wrap_content"></Spinner>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="עד"
                android:textSize="14dp"></TextView>

            <Spinner
                android:id="@+id/signUp_LSV_maxAge"
                android:layout_width="120dp"
                android:layout_height="wrap_content"></Spinner>
        </LinearLayout>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputDistance"
        style="@style/parent"
        android:layout_below="@+id/textInputMinMaxAge"
        android:layout_marginTop="10dp">

        <EditText
            android:id="@+id/editTextDistance"
            style="@style/modifiedEditText"
            android:hint="מרחק מקסימלי:"
            android:inputType="number"
            android:maxLines="1" />
    </com.google.android.material.textfield.TextInputLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:id="@+id/bottomLin"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/signUp_BTN_end"
            android:layout_width="110dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/login_button_bk2"
            android:text="המשך" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/points"
            android:layout_marginLeft="80dp"
            android:layout_gravity="bottom"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginRight="5dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/point"></ImageView>
            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginRight="5dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/point_black"></ImageView>
            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginRight="5dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/point"></ImageView>
        </LinearLayout>
    </RelativeLayout>
    </RelativeLayout>
