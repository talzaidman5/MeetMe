<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="#FFFFFF"
    tools:context=".Fragment.Fragment_signUp_second">

    <TextView
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:id="@+id/title"
        android:textColor="@color/black"
        android:text="Personal preferences"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"></TextView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/title"
            android:id="@+id/textInputInterestingIn"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="15dp">

            <TextView
                android:id="@+id/editTextInterestingIn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="Interested in"
                android:layout_marginRight="11dp"
                android:textSize="18dp"
                android:inputType="text"
                android:maxLines="1"
                android:textColor="#000000" />
            <CheckBox
                android:id="@+id/InterestingInFemale"
                style="@style/modifiedEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:textSize="18dp"
                android:text="Female" />

            <CheckBox
                android:id="@+id/InterestingInMen"
                style="@style/modifiedEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:textSize="18dp"
                android:text="Male" />

        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="left"
        android:layout_marginLeft="5dp"
        android:id="@+id/hobbies"
        android:layout_below="@+id/textInputInterestingIn"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="11dp"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:text="Yours hobbies"></TextView>
        <ImageButton
            android:id="@+id/signUp_BTN_artist"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/artist" />

        <ImageButton
            android:id="@+id/signUp_BTN_yoga"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/yoga" />

        <ImageButton
            android:id="@+id/signUp_BTN_bicycle"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/bicycle" />

        <ImageButton
            android:id="@+id/signUp_BTN_joystick"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/joystick" />

        <ImageButton
            android:id="@+id/signUp_BTN_bake"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/bake" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="132dp"
        android:gravity="left"
        android:layout_below="@+id/hobbies"
        android:id="@+id/hobbies2"
        android:orientation="horizontal">
        <ImageButton
            android:id="@+id/signUp_BTN_camera"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/camera" />
        <ImageButton
            android:id="@+id/signUp_BTN_guitar"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/guitar" />
    </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:id="@+id/textInputMinMaxAge"
            android:layout_below="@+id/hobbies2"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/editTextMinAge"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:text="Age range:"
                android:layout_gravity="right"
                android:textSize="18dp"
                android:inputType="textEmailAddress"
                android:layout_marginRight="11dp"
                android:maxLines="1"
                android:textColor="@color/black"></TextView>
            <Spinner
                android:id="@+id/signUp_LSV_minAge"
                android:layout_width="120dp"
                android:layout_height="wrap_content"></Spinner>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:textSize="18dp"
                android:textColor="@color/black"></TextView>

            <Spinner
                android:id="@+id/signUp_LSV_maxAge"
                android:layout_width="120dp"
                android:layout_height="wrap_content"></Spinner>
</LinearLayout>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:textColorHint="@color/black"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:textSize="18dp"
            android:id="@+id/editTextInterestingInHeight"
            android:inputType="number"
            android:gravity="left"
            android:layout_below="@id/textInputMinMaxAge"
            android:hint="Desired height" />



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:id="@+id/bottomLin"
        android:layout_alignParentBottom="true">
        <Button
            android:id="@+id/signUp_BTN_end"
            android:layout_width="110dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/login_button_bk2"
            android:text="Continue" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/points"
            android:layout_marginLeft="80dp"
            android:layout_gravity="bottom"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginRight="5dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/point"></ImageView>
            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginRight="5dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/point_black"></ImageView>
            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginRight="5dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/point"></ImageView>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
