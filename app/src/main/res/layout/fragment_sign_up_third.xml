<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:background="@color/white">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/sign_up_IMG_logo"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerInParent="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/profile" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/sign_up_IMG_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:id="@+id/title"
        style="@style/headerTextPrimary"
        android:textSize="16dp"
        android:text="Select profile photos"></TextView>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/title"
        android:id="@+id/scroll"
        android:layout_above="@+id/bottomLin"
        >
        <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rel">
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center|top"
    android:id="@+id/lin1"
    android:orientation="horizontal">
    <ImageView
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/add_image"
        android:id="@+id/sign_up_third_IMG_1"
        android:layout_marginTop="20dp"></ImageView>
    <ImageView
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/add_image"
        android:id="@+id/sign_up_third_IMG_2"
        android:layout_below="@+id/sign_up_IMG_logo"></ImageView>
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|top"
        android:id="@+id/lin2"
        android:layout_below="@+id/lin1"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/add_image"
            android:id="@+id/sign_up_third_IMG_3"
            android:layout_marginTop="20dp"></ImageView>
        <ImageView
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/add_image"
            android:layout_marginLeft="20dp"
            android:id="@+id/sign_up_third_IMG_4"
            android:layout_below="@+id/sign_up_IMG_logo"></ImageView>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|top"
        android:layout_below="@id/lin2"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:background="@drawable/add_image"
            android:layout_marginLeft="20dp"
            android:id="@+id/sign_up_third_IMG_5"
            android:layout_marginTop="20dp"></ImageView>
        <ImageView
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/add_image"
            android:layout_marginLeft="20dp"
            android:id="@+id/sign_up_third_IMG_6"
            android:layout_below="@+id/sign_up_IMG_logo"></ImageView>
</LinearLayout>
</RelativeLayout>
    </ScrollView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:id="@+id/bottomLin"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/signUp_BTN_end"
            android:layout_width="110dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/login_button_bk2"
            android:text="Continue" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/points"
            android:layout_marginLeft="80dp"
            android:layout_gravity="bottom"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginRight="5dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/point"></ImageView>
            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginRight="5dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/point"></ImageView>
            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginRight="5dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/point_black"></ImageView>
        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>